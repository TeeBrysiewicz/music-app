<div class="flex p-2">
  <div class="w-1/3">
    <div class="">
      <h1 class="h-16 text-lg">Albums</h1>
      <hr>
    </div>

    <ul class="ml-2 mt-2">
      {{#each this.model as |album|}}
        <li data-test="music-list-item">
          <LinkTo @route="albums.album" @model={{album.id}}>
            {{album.name}}
          </LinkTo>
        </li>
      {{/each}}
    </ul>
  </div>

  <div class="w-2/3">
    {{outlet}}
  </div>
</div>